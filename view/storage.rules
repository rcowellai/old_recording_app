rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Recording uploads - allow authenticated users to upload to their session folder
    match /recordings/{sessionId}/{fileName} {
      allow write: if request.auth != null && 
        fileName.matches('.*\\.(webm|wav|mp4)$') &&
        request.resource.size < 50 * 1024 * 1024; // 50MB limit
      allow read: if false; // Only Cloud Functions can read
    }
    
    // Admin access for all files (Cloud Functions)
    match /{allPaths=**} {
      allow read, write: if false; // Cloud Functions only
    }
  }
}
